@model DigiMovie.Models.Movie

@{
    ViewBag.Title = "حذف فیلم";
}


@section styles{
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
}
<h2>@ViewBag.Title</h2>
<br /><br />
<h3>آیا مایل به حذف فیلم هستید؟</h3>
<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <tr>
            <th>نام :</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>تاریخ تولید :</th>
            <td>
                @Model.DateAdded
            </td>
        </tr>
        <tr>
            <th>تاریخ انتشار :</th>
            <td>
                @Model.DateRelseased
               
            </td>
        </tr>
        <tr>
            <th>تعداد موجود :</th>
            <td>
                @Model.NumberInStock

            </td>
        </tr>
       
    </table>
</div>
<br /><br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">
        حذف
        <span class="glyphicon glyphicon-remove"></span>
    </button>
    <a href="@Url.Action("Index")" class="btn btn-default">
        بازگشت
        <span class="glyphicon glyphicon-share"></span>
    </a>
}

@section scripts{
    <script src="~/Scripts/toastr.min.js"></script>
    <script>
       if (@TempData["State"] = 4) {
            toastr.error("مشتری مورد نظر حذف نگردید؛ لطفا دوباره تلاش نمایید.", "دیجی مووی", {
                "progressBar": true,
                "timeOut": "10000",
                "positionClass": "toast-top-left"
            });
        }
    </script>
}


