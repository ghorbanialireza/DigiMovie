@model DigiMovie.ViewModels.MoviesFormViewModel
@{
    ViewBag.Title = "افزودن فیلم";
}

@section styles{
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
}


<h2>@ViewBag.Title</h2>
@Html.ValidationSummary("لطفا موارد زیر را بررسی نمایید:")

@using (Html.BeginForm("Create","Movies",FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Movie.Name, "نام :")
        @Html.TextBoxFor(c => c.Movie.Name, null, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Movie.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Movie.GenreId, "دسته بندی :")
        @Html.DropDownListFor(c => c.Movie.GenreId,
       new SelectList(Model.Genres, "Id", "Name"),
       "لطفا یک مورد را انتخاب کنید",
       new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Movie.GenreId@*, "لظفا نوع عضویت را وارد نمایید"*@)
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Movie.DateAdded, "تاریخ تولید :")
            @Html.TextBoxFor(c => c.Movie.DateAdded, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Movie.DateRelseased, "تاریخ انتشار :")
            @Html.TextBoxFor(c => c.Movie.DateRelseased, null, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Movie.NumberInStock, "تعداد موجود :")
            @Html.TextBoxFor(c => c.Movie.NumberInStock, null, new { @class = "form-control" })
        </div>
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-success">
            افزودن
            <span class="glyphicon glyphicon-plus"></span>
        </button>
        <a href="@Url.Action("Index")" class="btn btn-default">
            بازگشت
            <span class="glyphicon glyphicon-share"></span>
        </a>
    }

    @section scripts{
    @Scripts.Render("~/bundles/jqueryval")
        <script src="~/Scripts/toastr.min.js"></script>
        <script>
           if (@TempData["State"] = 0) {
                toastr.error("فیلم مورد نظر افزوده نگردید؛ لطفا دوباره تلاش نمایید.", "دیجی مووی", {
                    "progressBar": true,
                    "timeOut": "10000",
                    "positionClass": "toast-top-left"
                });
            }
        </script>
    }
