@model DigiMovie.ViewModels.MoviesFormViewModel
@{
    ViewBag.Title = "ویرایش فیلم";
}

@section styles{
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
}


<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(c => c.Movie.Name, "نام :")
        @Html.TextBoxFor(c => c.Movie.Name, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Movie.DateAdded, "تاریخ تولید ")
        @Html.TextBoxFor(c => c.Movie.DateAdded, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Movie.DateRelseased, "تاریخ انتشار :")
        @Html.TextBoxFor(c => c.Movie.DateRelseased, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Movie.GenreId, "تعداد موجودیت :")
        @Html.DropDownListFor(c => c.Movie.GenreId,
       new SelectList(Model.Genres, "Id", "Name"),
       "لطفا یک مورد را انتخاب کنید",
       new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-success">
        افزودن
        <span class="glyphicon glyphicon-plus"></span>
    </button>
    <a href="@Url.Action("Index")" class="btn btn-default">
        بازگشت
        <span class="glyphicon glyphicon-share"></span>
    </a>
}

@section scripts{
    <script src="~/Scripts/toastr.min.js"></script>
    <script>
       if (@TempData["State"] = 2) {
            toastr.error("فیلم مورد نظر ویرایش نگردید؛ لطفا دوباره تلاش نمایید.", "دیجی مووی", {
                "progressBar": true,
                "timeOut": "10000",
                "positionClass": "toast-top-left"
            });
        }
    </script>
}


